{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@auth/*": [
        "src/auth/*"
      ],
      "@budget/*": [
        "src/budget/*"
      ],
      "@category/*": [
        "src/category/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@currency/*": [
        "src/currency/*"
      ],
      "@payer/*": [
        "src/payer/*"
      ],
      "@transaction/*": [
        "src/transaction/*"
      ]
    }
  }
}
